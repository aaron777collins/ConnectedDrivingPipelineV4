{
  "pipeline_name": "wyoming-apr2021-constoffset-v1",
  "version": "1.0.0",
  "created": "2026-02-12",
  "attack_plan": "attack_plans/WYOMING-APR2021-CONSTOFFSET-V1.md",
  
  "data": {
    "source_file": "Full_Wyoming_Data.parquet/",
    "source_type": "parquet",
    
    "columns_to_extract": [
      "metadata_receivedAt",
      "coreData_msgCnt",
      "coreData_id",
      "coreData_position_lat",
      "coreData_position_long",
      "coreData_elevation",
      "coreData_accelset_accelYaw",
      "coreData_accuracy_semiMajor",
      "coreData_speed",
      "coreData_heading"
    ],
    
    "filtering": {
      "center_longitude": -106.0831353,
      "center_latitude": 41.5430216,
      "radius_meters": 2000
    },
    
    "date_range": {
      "start": "2021-04-01",
      "end": "2021-04-30"
    },
    
    "coordinate_conversion": {
      "enabled": true,
      "method": "local_projection",
      "output_columns": ["x_pos", "y_pos"]
    }
  },
  
  "attack": {
    "type": "constant_offset_per_vehicle",
    "malicious_ratio": 0.30,
    "offset_distance_min": 100,
    "offset_distance_max": 200,
    "offset_direction_min": 0,
    "offset_direction_max": 360,
    "seed": 42,
    "label_column": "isAttacker"
  },
  
  "ml": {
    "features": [
      "x_pos",
      "y_pos", 
      "coreData_elevation",
      "coreData_speed",
      "coreData_accelset_accelYaw",
      "coreData_heading",
      "coreData_accuracy_semiMajor"
    ],
    "label": "isAttacker",
    "train_test_split": {
      "test_size": 0.20,
      "random_state": 42,
      "shuffle": true
    },
    "classifiers": ["RandomForest", "DecisionTree", "KNeighbors"]
  },
  
  "cache": {
    "clean_dataset": "cache/clean/wyoming-apr2021-2000m-core-v1.parquet",
    "attack_dataset": "cache/attacks/wyoming-apr2021-constoffset-100to200m-30pct-seed42.parquet"
  },
  
  "output": {
    "results_dir": "results/",
    "log_dir": "logs/"
  },
  
  "dask": {
    "n_workers": 4,
    "threads_per_worker": 2,
    "memory_limit": "12GB"
  }
}
